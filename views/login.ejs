<%- include layouts/header.ejs %>
<!-- main content -->
<main class="register">
    <section class="form-card">
        <h1 class="tex-center"> Log in  </h1>
        <p class="text-center bottom-dotted" >Don't have an account?  
            <a href="/register" class="login"> Register here</a>
        </p>
        <p class="text-left ml-2"> Please enter your details </p>
        <form method="POST" action='/login_data'>
            <div class="padding-1">
                <label>Username</label>
                <input type= "text" name ="username" placeholder="Username" class ="form-inputs" autocomplete required/>
            </div>
            <div class="padding-1">
                <label>Password</label>
                <input type= "password" name ="password" placeholder="Password" class ="form-inputs" autocomplete required/>
            </div>
            <div class="padding-1 container">
                <input type="submit" value="LOGIN" class="form-btn" >
            </div>
        </form>
    </section>
</main>
